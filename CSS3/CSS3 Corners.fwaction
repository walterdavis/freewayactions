<item-action name="com.wdstudio.css3corners" title="CSS3 Corners"><action-appliesto html4 html32css xhtml xhtmlstrict /><action-version version="0.2.1">“CSS3 Corners” ActionWalter Davis Studio 2009Apply to an HTML item to round its corners using pure CSS3.</action-version><action-number name="radius" title="Corner Radius (px)"><action-disclosure name="separate" title="Separate Radiuses" default="no"><action-number name="top_left" title="Top Left" /><action-number name="top_right" title="      Top Right" advance="no" /><action-number name="bottom_left" title="Bottom Left" /><action-number name="bottom_right" title=" Bottom Right" advance="no" /><action-javascript>	function fwInterface(){		if(fwParameters['separate'].fwBoolValue){			fwParameters['top_left'].fwVisible = fwParameters['top_right'].fwVisible = fwParameters['bottom_left'].fwVisible = fwParameters['bottom_right'].fwVisible = true;			fwParameters['radius'].fwEnable = false;		}else{			fwParameters['radius'].fwEnable = true;			fwParameters['top_left'].fwVisible = fwParameters['top_right'].fwVisible = fwParameters['bottom_left'].fwVisible = fwParameters['bottom_right'].fwVisible = false;		}	}	function fwParameterChanged(newParameter,oldParameter){		fwInterface(newParameter);	}	function fwAfterEndHTML(){		var radius = parseInt(fwParameters["radius"].fwValue,10);		var separate = fwParameters['separate'].fwBoolValue;		var extended = '';		if (separate){			var top_left = parseInt(fwParameters['top_left'].fwValue,10);			var top_right = parseInt(fwParameters['top_right'].fwValue,10);			var bottom_left = parseInt(fwParameters['bottom_left'].fwValue,10);			var bottom_right = parseInt(fwParameters['bottom_right'].fwValue,10);			if (top_left > 0 || top_right > 0 || bottom_left > 0 || bottom_right > 0){				extended = " { ";				extended += (top_left > 0) ? "-webkit-border-top-left-radius:" + top_left + "px; -moz-border-radius-topleft:" + top_left + "px; " : "";				extended += (top_right > 0) ? "-webkit-border-top-right-radius:" + top_right + "px; -moz-border-radius-topright:" + top_right + "px; " : "";				extended += (bottom_left > 0) ? "-webkit-border-bottom-left-radius:" + bottom_left + "px; -moz-border-radius-bottomleft:" + bottom_left + "px; " : "";				extended += (bottom_right > 0) ? "-webkit-border-bottom-right-radius:" + bottom_right + "px; -moz-border-radius-bottomright:" + bottom_right + "px; " : "";				extended += " } ";			}		}		if(radius && radius > 0 || extended.length > 0){			var myhead = fwDocument.fwTags.fwFind("head");			var myTags = Array("div","td");			var myItem = fwDocument.fwTags.fwFindAll(myTags,fwItem);			for (var i in myItem){				if (myItem[i] && myItem[i] != null){					if(!myItem[i].ID){ 						myItem[i].ID = fwQuote(fwItem);					}					var myID = myItem[i].ID;					myID = fwQuote(myID,'','"');//"					if (myhead){						var cssStyles = myhead.fwAddCSSStyles();						if(extended.length < 1){							cssStyles.fwAddRawln("#" + myID + " { -webkit-border-radius: " + radius + "px; -moz-border-radius: " + radius + "px; }");						}else{							cssStyles.fwAddRawln("#" + myID + extended);						}					}				}			}		}	}</action-javascript></item-action>
<item-action name="com.wdstudio.freezeformitem" title="Freeze Form Item"><action-appliesto html4 html32css xhtml xhtmlstrict /><action-version version="1.1">“Freeze Form Item” ActionWalter Davis Studio 2004, 2008, 2012Apply to a form item to cause it to freeze to the size it appears in Freeway.</action-version><action-checkbox name="Activate"><action-label name="divider1" title="-"><action-checkbox name="Width"><action-checkbox name="forceW" title="Force Width" default="no"><action-text name="newWidth" title="New Width"><action-label name="divider2" title="-"><action-checkbox name="Height"><action-checkbox name="forceH" title="Force Height" default="no"><action-text name="newHeight" title="New Height"><action-javascript>	function fwInterface(){		var activate = fwParameters["Activate"].fwBoolValue;		var Width = fwParameters["Width"].fwBoolValue;		var Height = fwParameters["Height"].fwBoolValue;		var newWidth = fwParameters["newWidth"].fwValue;		var forceWidth = fwParameters["forceW"].fwBoolValue;		var newHeight = fwParameters["newHeight"].fwValue;		var forceHeight = fwParameters["forceH"].fwBoolValue;		fwParameters["newHeight"].fwVisible = activate && forceHeight && Height;		fwParameters["newWidth"].fwVisible = activate && forceWidth && Width;		fwParameters["Width"].fwEnable = activate;		fwParameters["Height"].fwEnable = activate;		fwParameters["forceW"].fwEnable = activate && Width;		fwParameters["forceH"].fwEnable = activate && Height;	}	function fwParameterChanged(newParam,oldParam){		if (newParam.fwName == "forceW" || newParam.fwName == "forceH" || newParam.fwName == "newHeigh" || newParam.fwName == "newWidth"){			return fwInterface();		}	}	function addUnit(myValue){		for(var i=0; i < myValue.length; i++){			var oneChar = myValue.substring(i,i+1);			if (oneChar < "0" || oneChar > "9"){				return myValue;			}		}		return myValue + "px";	}		function fwAfterEndBody(){		var activate=fwParameters["Activate"].fwBoolValue;		var addHeight=fwParameters["Height"].fwBoolValue;		var addWidth=fwParameters["Width"].fwBoolValue;		var newHeight=fwParameters["newHeight"].fwValue;		var newWidth=fwParameters["newWidth"].fwValue;		var forceWidth = fwParameters["forceW"].fwBoolValue;		var forceHeight = fwParameters["forceH"].fwBoolValue;		if(activate == true){			var myhead = fwDocument.fwTags.fwFind("head");			var myTags = Array("input","textarea","select");			var myItem = fwDocument.fwTags.fwFindAll(myTags,fwItem);			for (var i in myItem){				if (myItem[i] && myItem[i] != null){					if(!myItem[i].NAME){ 						myItem[i].NAME = fwQuote(fwItem);					}					if(!myItem[i].ID){ 						myItem[i].ID = myItem[i].NAME;					}					var d = myItem[i].fwFindEnclosing('div');					if(d){						if(d.id && d.id.toString() == myItem[i].id.toString()){							d.id = fwQuote(d.id.toString().slice(1,-1) + '_wrap');						}					}					var myID = myItem[i].ID;					myID = fwQuote(myID,'','"');//"					var myWidth = fwItem.fwWidth;					if(newWidth && forceWidth) myWidth = newWidth;					var myHeight = fwItem.fwHeight;					if(newHeight && forceHeight) myHeight = newHeight;					var myStyle = "";					if(addHeight){						myStyle += "height:" + addUnit(myHeight) + "; ";					}					if(addWidth){						myStyle += "width:" + addUnit(myWidth) + ";";					}					if (myhead){						var cssStyles = myhead.fwAddCSSStyles();						cssStyles.fwAddRawln("#" + myID + " { " + myStyle + " }");					}				}			}		}	}</action-javascript></item-action>